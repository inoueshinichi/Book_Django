    "version": "2.0.0",
    "tasks": [
        // {
        //     "label": "CHECK anaconda virtual environments",
        //     "type": "process",
        //     "command": "conda",
        //     "args": [
        //         "info",
        //         "-e"
        //     ]
        // },
        {
            "label": "SHOW postgreSQL db",
            "type": "shell",
            "command": "psql -l",
        },
        {
            "label": "ENTER private_diary table on postgreSQL db",
            "type":"shell",
            "command": "psql -d private_diary",
            "dependsOrder": "sequence",
            "dependsOn": [
                "SHOW postgreSQL db"
            ],
        }
        {
            "label": "MAKE migration for private_diary db",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}/private_diary/manage.py",
                "makemigrations"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "REFLECT migration for private_diary db",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}/private_diary/manage.py",
                "migrate"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "make migration for private_diary db"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}