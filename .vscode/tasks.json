{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check anaconda virtual environments",
            "type": "shell",
            "command": "conda",
            "args": [
                "info",
                "-e"
            ]
        },
        {
            "label": "MAKE migration for private_diary db",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}/private_diary/manage.py",
                "makemigrations"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "REFLECT migration for private_diary db",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}/private_diary/manage.py",
                "migrate"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "make migration for private_diary db"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}